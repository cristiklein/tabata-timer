# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files: keep trailing whitespace (needed for line breaks)
[*.md]
trim_trailing_whitespace = false

# JSON files (same indent)
[*.json]
indent_style = space
indent_size = 2

# YAML files (same indent)
[*.yml]
indent_style = space
indent_size = 2

# Makefile requires tabs
[Makefile]
indent_style = tab
